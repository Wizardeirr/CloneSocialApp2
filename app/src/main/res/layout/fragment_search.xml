<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpHomeImageSlider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.viewpager2.widget.ViewPager2>

    <LinearLayout
        android:id="@+id/user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/progressLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/signImageViewProfile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:src="@drawable/post"
            app:civ_border_color="#FF000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mağaza İsmi"
                android:textColor="@color/white"
                android:textSize="24sp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="İstanbul Şişli / Osmanbey"
                android:textSize="20sp">

            </TextView>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_marginLeft="15dp"
        android:layout_height="0dp"
        android:layout_marginTop="490dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="1300TL"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold|italic">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:textColor="@color/white"
            android:text="Lorem ipsum dolor sit amet kazak">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/progressLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user">


        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
            android:layout_width="97dp"
            android:layout_height="12dp"
            android:layout_marginStart="4dp"
            android:max="100"
            android:progress="1"
            android:secondaryProgress="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vpHomeImageSlider">

        </ProgressBar>

        <ProgressBar
            android:id="@+id/progressBar2"
            style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
            android:layout_width="97dp"
            android:layout_height="12dp"
            android:layout_marginStart="4dp"
            android:max="100"
            android:progress="1"
            android:secondaryProgress="2"
            app:layout_constraintStart_toEndOf="@+id/progressBar"
            app:layout_constraintTop_toBottomOf="@+id/vpHomeImageSlider">

        </ProgressBar>

        <ProgressBar
            android:id="@+id/progressBar3"
            style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
            android:layout_width="97dp"
            android:layout_height="12dp"
            android:layout_marginStart="4dp"
            android:max="100"
            android:progress="1"
            android:secondaryProgress="2"
            app:layout_constraintStart_toEndOf="@+id/progressBar5"
            app:layout_constraintTop_toBottomOf="@+id/vpHomeImageSlider">

        </ProgressBar>

        <ProgressBar
            android:id="@+id/progressBar4"
            style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
            android:layout_width="97dp"
            android:layout_height="12dp"
            android:layout_marginStart="4dp"
            android:max="100"
            android:progress="1"
            android:secondaryProgress="2"
            app:layout_constraintStart_toEndOf="@+id/progressBar5"
            app:layout_constraintTop_toBottomOf="@+id/vpHomeImageSlider">

        </ProgressBar>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>