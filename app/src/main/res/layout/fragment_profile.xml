<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    tools:context=".fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/baseline_arrow_back_ios_icon">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity=""
            android:text="Mağaza İsmi"
            android:textStyle="bold"
            android:textSize="24sp">
        </TextView>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_marginStart="135dp"
            android:gravity="end|center"

            android:layout_height="50dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/notify_icon">

            </ImageView>

            <ImageView
                android:layout_margin="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/headline_icon">

            </ImageView>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/signImageViewProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/post"
            app:civ_border_color="#FF000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity=""
                android:textStyle="bold"
                android:layout_gravity=""
                android:layout_marginTop="10dp"
                android:text="Mağaza İsmi"
                android:textSize="17sp">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity=""
                android:text="Ünvan"
                android:textSize="15sp">

            </TextView>




        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:gravity=""
            android:text="0532 123 45 67"
            android:textSize="18sp">

        </TextView>
        <ImageView
            android:layout_width="25dp"
            android:layout_marginLeft="3dp"
            android:layout_height="25dp"
            android:src="@drawable/home_icon"
            >
        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity=""
            android:text="İstanbul-Şişli/Osmanbey"
            android:textSize="18sp">

        </TextView>
        <ImageView
            android:layout_width="25dp"
            android:layout_marginLeft="3dp"
            android:layout_height="25dp"
            android:src="@drawable/search_icon"
            >
        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/follow_button"
            android:text="Takip Et"
            android:textSize="13sp"
            android:layout_marginTop="5dp">

        </button>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>